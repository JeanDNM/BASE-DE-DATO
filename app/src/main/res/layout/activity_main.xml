<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/NameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre:"
            android:inputType="text" />

        <EditText
            android:id="@+id/EmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email:"
            android:inputType="text" />

        <EditText
            android:id="@+id/ProvinciaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Provincia" />

        <Button
            android:id="@+id/GuardarContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Contacto" />

        <Button
            android:id="@+id/consultabutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consulta  de la base de datos" />

        <EditText
            android:id="@+id/ProvinciaConsultaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Provincia de Consulta" />

        <Button
            android:id="@+id/ConsultaPorProvinciaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Consultar por Provincia" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        <TextView
            android:id="@+id/consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>